# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.LoginController.index()
GET     /login_err                  controllers.LoginController.index_with_error(err:String)
POST	/login                      controllers.LoginController.login()
GET     /simple_release             controllers.SimpleReleaseContoller.index()
POST    /simple_release             controllers.SimpleReleaseContoller.post()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
